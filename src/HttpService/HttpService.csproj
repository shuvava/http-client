<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>Vladimir Shurygin&lt;Vladimir.Shurygin@worksafebc.com&gt;</Authors>
    <Company>WorkSafe BC</Company>
    <Description>Http REST Client</Description>
    <Copyright>WorkSafe BC</Copyright>
    <PackageProjectUrl>https://wcbbc.visualstudio.com/DevOps-Prevention/_git/WS.NOP.Common</PackageProjectUrl>
    <RepositoryUrl>https://wcbbc.visualstudio.com/DevOps-Prevention/_git/WS.NOP.Common</RepositoryUrl>
    <PackageTags>HttpClient</PackageTags>
  </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
        <OutputPath>../../bin/HttpService/Debug</OutputPath>
    </PropertyGroup>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
        <OutputPath>../../bin/HttpService/Release</OutputPath>
    </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="9.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\HttpService.Abstractions\HttpService.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update=".nuspec">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
