<?xml version="1.0"?>
<package xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://schemas.microsoft.com/packaging/2013/05/nuspec.xsd ">
    <metadata>
        <!-- The identifier that must be unique within the hosting gallery -->
        <id>RestServiceClient.Bearer</id>

        <!-- The package version number that is used when resolving dependencies -->
        <version>2.0.0</version>

        <!-- Authors contain text that appears directly on the gallery -->
        <authors>shuvava</authors>


        <owners>shuvava</owners>
        <licenseUrl>https://raw.githubusercontent.com/shuvava/http-client/master/LICENSE</licenseUrl>
        <projectUrl>https://github.com/shuvava/http-client</projectUrl>

        <requireLicenseAcceptance>false</requireLicenseAcceptance>

        <description>HTTP Client (REST, Stream) with Bearer authorization</description>


        <!-- Tags appear in the gallery and can be used for tag searches -->
        <tags>HTTP REST Client Bearer auth</tags>
        <dependencies>
            <group targetFramework=".NETStandard2.0">
                <dependency id="Newtonsoft.Json" version="9.0.1" exclude="Build,Analyzers" />
                <dependency id="Microsoft.Extensions.Options" version="3.0.0" exclude="Build,Analyzers" />
                <dependency id="RestServiceClient" version="2.0.0" exclude="Build,Analyzers" />
                <dependency id="RestServiceClient.Abstractions" version="2.0.0" exclude="Build,Analyzers" />
            </group>
            <group targetFramework=".NETStandard2.1">
                <dependency id="Newtonsoft.Json" version="9.0.1" exclude="Build,Analyzers" />
                <dependency id="Microsoft.Extensions.Options" version="3.0.0" exclude="Build,Analyzers" />
                <dependency id="RestServiceClient" version="2.0.0" exclude="Build,Analyzers" />
                <dependency id="RestServiceClient.Abstractions" version="2.0.0" exclude="Build,Analyzers" />
            </group>
        </dependencies>
    </metadata>
    <files>
        <file src="..\..\build\HttpService.Bearer\bin\$Configuration$\netstandard2.0\HttpService.*.dll"
              target="lib\netstandard2.0"/>
        <file src="..\..\build\HttpService.Bearer\bin\$Configuration$\netstandard2.0\HttpService.*.pdb"
              target="lib\netstandard2.0"/>
        <file src="..\..\build\HttpService.Bearer\bin\$Configuration$\netstandard2.1\HttpService.*.dll"
              target="lib\netstandard2.1"/>
        <file src="..\..\build\HttpService.Bearer\bin\$Configuration$\netstandard2.1\HttpService.*.pdb"
              target="lib\netstandard2.1"/>
    </files>
</package>
